<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <title>Abarrotes Ti</title>

</head>
<body >
    <center><h1 ;">Abarrotes TI</h1></center>
        <div style="background-color: rgb(0, 0, 0);" data-role="header">
            <div data-role="navbar">
            <ul>
                <li><a href="#" class="ui-btn-active">One</a></li>
                <li><a href="#">Two</a></li>
                <li><a href="#">Three</a></li>
            </ul>
                </div>
        </div>
        <div data-role="content">
            <form  action="/" method="POST">
                
                <label for="txt_codigo_barras" style="color: rgb(0, 0, 0)">Codigo de barras:</label>
                <input type="text" name="barcode" id="txt_codigo_barras" placeholder="Código de barras" value="">
                
                <label for="txt_description" style="color: rgb(0, 0, 0);">Descripción:</label>
                    <input type="text" name="description" id="txt_description" placeholder="Descripción" value="">

                    <label for="txt_brand" style="color: rgb(0, 0, 0);">Marca:</label>
                    <input type="text" name="brand" id="txt_brand" placeholder="marca" value="">

                    <label for="txt_price" style="color: rgb(0, 0, 0);">Precio:</label>
                    <input type="text" name="price" id="txt_price" placeholder="Precio" value="">

                    <label for="txt_cost" style="color: rgb(0, 0, 0);">Costo:</label>
                    <input type="text" name="cost" id="txt_cost" placeholder="Costo" value="">

                    <label for="txt_stock" style="color:rgb(0, 0, 0);">Stock</label>
                    <input type="text" name="stock" id="txt_stock" placeholder="Stock" value="">

                    <label for="txt_expiredDate" style="color: rgb(0, 0, 0);">Caducidad</label>
                    <input type="text" name="expiredDate" id="txt_expiredDate" placeholder="Caducidad" value="">

                    <label for="flip-2" style="color: rgb(0, 0, 0);">Activo</label>
                    <select name="status" id="flip-2" data-role="slider">
                     <option value="0">Activos</option>
                  <option value="1">Inactivo</option>
                </select>

                    <label for="submit-6" style="color: rgb(3, 3, 3);">Guardar</label>
                    <button type="submit" id="submit-6" class="ui-shadow ui-btn ui-corner-all ui- 
                            mini" style="color: rgb(0, 0, 0);">Guardar</button>
            </form>
            <form>
                    <input data-type="search" id="searchForCollapsibleSetChildren">
                </form>
                 <div data-role="collapsibleset" data-filter="true" data-children="> div, > div div ul li" data-inset="true" 
                    id="collapsiblesetForFilterChildren" data-input="#searchForCollapsibleSetChildren">
                    <% products.forEach((product)=>{%>
                
                         <div data-role="collapsible" data-filtertext="<%= product.description %>">
                            <h1> <%= product.description %></h1>
                            <ul data-role="listview" data-inset="false">
                                <li>Codigo de barras: <%= product.barcode %></li>
                                <li>Marca: <%=product.brand %></li>
                                <li>Precio de compra: <%= product.price %></li>
                                <li>Precio de venta: <%= product.cost %></li>
                                <li>Existencias: <%= product.stock %></li>
                                <li>Caducidad: <%= product.expiredDate %></li>
                                <li>Estatus: <%= product.status %></li>
                                <li><a href="/<%= product.barcode %>" class="ui-btn" >Editar</a></li>
                            <li><a href="/delete/<%= product.barcode %>" class="ui-btn">Eliminar</a></li>
                            </ul> 
                         </div>
                
                         <div data-role="collapsible" data-filtertext="<%= product.description %>">
                         </div>
                
                    <%})%>
                </div>
    </ul>
    </div>
        <div data-role="footer">
            <h5 style="color: rgb(0, 0, 0);"> Luisivmaraz 03 </h5>

        </div>
</body>
</html>
